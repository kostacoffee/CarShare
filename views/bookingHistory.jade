extends ./base.jade
block content
	//- h2 Welcome #{member.nametitle} #{member.namegiven} #{member.namefamily}
	//- p Your current membership plan is: #{member.subscribed}
	//- p You've made a total of #{member.stat_nrofbookings} bookings!
	//- //- ul
	div#his.mdl-card
		div.mdl-card__title
			div.mdl-card__title-text My Booking History! 
		div.mdl-card__supporting
			div.mdl-card__supporting-text You've made a total of #{member.stat_nrofbookings} bookings!
		
	table#history.mdl-data-table.mdl-js-data-table.mdl-shadow--2dp
		thead
			tr
				th#tabletab.mdl-data-table__cell--non-numeric Id
				th#tabletab Car
				th#tabletab Regno
				th#tabletab Date
				th#tabletab Length
		tbody
			each entry in history	
				tr(onclick="window.document.location='/booking/#{entry.id}'")
					td#tabletab #{entry.id}
					td#tabletab #{entry.car}
					td#tabletab #{entry.regno}
					td#tabletab #{entry.dayInMonth} #{entry.month} #{entry.year} #{entry.startTime}
					td#tabletab #{entry.length} hours
	p
