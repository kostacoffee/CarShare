doctype html
html
	head
		title PeerCar
		link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
		link(href='https://code.getmdl.io/1.1.3/material.indigo-pink.min.css', rel='stylesheet')
		link(href='css/base.css', rel='stylesheet')
		script(src='https://code.getmdl.io/1.1.3/material.min.js', defer)
		meta(name='viewport', content='width=device-width, initial-scale=1.0')

	body
		div.mdl-layout.mdl-js-layout.mdl-layout--fixed-header

			header.mdl-layout__header
				div.mdl-layout__header-row
					span.mdl-layout-title PeerCar
					div.mdl-layout-spacer
					nav.mdl-navigation
						if (member)
							a.mdl-navigation__link(href='/bookinghistory') My Bookings
							a.mdl-navigation__link(href='/newbooking') New Booking
							a.mdl-navigation__link(href='/carbays') CarBays
							button#menuButton.mdl-button.mdl-js-button.mdl-button--icon
								i.material-icons more_vert

							ul.mdl-menu.mdl-menu--bottom-right.mdl-js-menu.mdl-js-ripple-effect(for='menuButton')
								li.mdl-menu__item Profile Setting
								li.mdl-menu__item Invoices
								li.mdl-menu__item.mdl-menu__item--full-bleed-divider Membership Details
								li.mdl-menu__item(href='/logout') Logout
								
							a.mdl-navigation__link(href='/logout') Logout
						a.mdl-navigation__link(href='') Link
					
			main.mdl-layout__content
				block content

			footer.mdl-mini-footer
				div.mdl-mini-footer__left-section
					div.mdl-logo PeerCar 2016
				div.mdl-mini-footer__right-section 
					p Brought to you by the NoSQL Team.
						
